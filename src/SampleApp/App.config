<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="castle" type="Castle.Windsor.Configuration.AppDomain.CastleSectionHandler, Castle.Windsor"/>
  </configSections>
  <castle>
    <facilities>
      <facility id="startable.facility" type="Castle.Facilities.Startable.StartableFacility, Castle.Windsor"/>
      <facility id="quartznet" type="Castle.Facilities.QuartzIntegration.QuartzFacility, Castle.Facilities.QuartzIntegration">
        <globalJobListeners>
          <item>${globalJobListener}</item>
        </globalJobListeners>
        <globalTriggerListeners>
          <item>${globalTriggerListener}</item>
        </globalTriggerListeners>
        <schedulerListeners>
          <item>${sampleSchedulerListener}</item>
        </schedulerListeners>
        <jobListeners>
          <job name="hello-world">C:\temp\quartzfacility\SampleApp\App.config
            <listener>${sampleJobListener}</listener>
          </job>
        </jobListeners>
        <triggerListeners>
          <trigger name="sample-trigger">
            <listener>${sampleTriggerListener}</listener>
          </trigger>
        </triggerListeners>
        <quartz>
          <item key="quartz.scheduler.instanceName">XmlConfiguredInstance</item>
          <item key="quartz.threadPool.type">Quartz.Simpl.DefaultThreadPool, Quartz</item>
          <item key="quartz.threadPool.threadCount">5</item>
          <item key="quartz.plugin.xml.type">Quartz.Plugin.Xml.XMLSchedulingDataProcessorPlugin, Quartz.Plugins</item>
          <item key="quartz.plugin.xml.scanInterval">10</item>
          <item key="quartz.plugin.xml.fileNames">~/quartz_jobs.xml</item>
        </quartz>
      </facility>
    </facilities>
    <components>
        <component id="globalJobListener" type="Castle.Facilities.QuartzIntegration.SampleApp.SampleJobListener, Castle.Facilities.QuartzIntegration.SampleApp">
            <parameters>
                <name>Global job listener</name>
            </parameters>
        </component>
        <component id="sampleJobListener" type="Castle.Facilities.QuartzIntegration.SampleApp.SampleJobListener, Castle.Facilities.QuartzIntegration.SampleApp"/>
        <component id="globalTriggerListener" type="Castle.Facilities.QuartzIntegration.SampleApp.SampleTriggerListener, Castle.Facilities.QuartzIntegration.SampleApp">
            <parameters>
                <name>Global trigger listener</name>
            </parameters>
        </component>
        <component id="sampleTriggerListener" type="Castle.Facilities.QuartzIntegration.SampleApp.SampleTriggerListener, Castle.Facilities.QuartzIntegration.SampleApp"/>
        <component id="sampleSchedulerListener" type="Castle.Facilities.QuartzIntegration.SampleApp.SampleSchedulerListener, Castle.Facilities.QuartzIntegration.SampleApp"/>
        <component id="sampleJob" type="Castle.Facilities.QuartzIntegration.SampleApp.SampleJob, Castle.Facilities.QuartzIntegration.SampleApp"/>
    </components>
  </castle>

      <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
  </configuration>
